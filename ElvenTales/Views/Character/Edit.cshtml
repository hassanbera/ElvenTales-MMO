@model ElvenTales.Models.Character
<h2>Edit Character</h2>

<form asp-action="Edit" method="post">
	<input type="hidden" asp-for="Id" />
	<input type="hidden" asp-for="UserId" />
	<input type="hidden" asp-for="Class" />
	<div class="form-group">
		<label>Character Name</label>
		<input asp-for="CharName" class="form-control" />
	</div>
	<div class="form-group">
		<label>Level</label>
		<input asp-for="Level" type="number" class="form-control" />
	</div>
	<div class="form-group">
		<label>Honour</label>
		<input asp-for="Honour" type="number" class="form-control" />
	</div>
	<div class="form-group">
		<label>Ranking</label>
		<input asp-for="Ranking" type="number" class="form-control" />
	</div>
	<button type="submit" class="btn btn-primary">Save Changes</button>

	<script src="~/lib/jquery/jquery.min.js"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


</form>