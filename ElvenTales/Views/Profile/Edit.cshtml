@model ElvenTales.Models.User

<h2>Edit Profile</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />  <!-- Hidden field for user ID -->

    <div class="form-group">
        <label>Username</label>
        <input asp-for="Username" class="form-control" />  <!-- Username input -->
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />  <!-- Email input -->
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>  <!-- Submit button -->
</form>
